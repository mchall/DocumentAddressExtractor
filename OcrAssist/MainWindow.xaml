<Window x:Class="OcrAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OcrAssist"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>

        <Image x:Name="Original" Grid.Row="0" Margin="5" Grid.Column="0" />

        <Image x:Name="Image" Grid.Row="0" Margin="5" Grid.Column="1" />
        <Button Click="Button_Click" Grid.Row="1" Height="20" Grid.ColumnSpan="2">Run</Button>
    </Grid>
</Window>
